---
import Container from "../components/Container.astro";
import fetchAllPlayground from "../helpers/fetchPlayground";
const myPlayground = await fetchAllPlayground();
---

<Container>
  <h2 class="head-section" id="projects">Playground</h2>
  <div class="grid grid-cols-1 gap-3">
    {
      myPlayground.map((playground) => (
        <a href={playground.repoUrl} target="_blank">
          <div class="flex flex-col gap-2 rounded-lg border border-gray-200 px-4 py-3">
            <h3 class="text-xl font-medium dark:text-gray-200">{playground.name}</h3>
            <p class="text-sm font-extralight dark:text-gray-300"> {playground.description} </p>
          </div>
        </a>
      ))
    }
  </div>
</Container>
