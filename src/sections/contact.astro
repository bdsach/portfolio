---
import Container from "../components/Container.astro";
---

<Container>
  <h2 class="head-section dark:text-gray-100">Get in touch</h2>
  <p class="text-xl font-extralight leading-relaxed dark:text-gray-200">
    If you have any questions or want to work together, feel free to reach out
    to me.
  </p>

  <div class="mt-5 flex gap-4">
    <!-- GitHub -->
    <a href="https://github.com/bdsach" aria-label="GitHub" target="_blank">
      <button
        class="social-icon group dark:border-gray-200"
        aria-label="Open GitHub"
      >
        <span
          class="iconify text-xl dark:text-gray-200 dark:group-hover:text-black"
          data-icon="mdi:github"></span>
      </button>
    </a>

    <!-- Email -->
    <a href="mailto:bds_si@hotmail.com" aria-label="Email" target="_blank">
      <button
        class="social-icon group dark:border-gray-200"
        aria-label="Send Email"
      >
        <span
          class="iconify text-xl dark:text-gray-200 dark:group-hover:text-black"
          data-icon="mdi:at"></span>
      </button>
    </a>

    <!-- Twitter -->
    <a href="https://twitter.com/bds_sil" aria-label="Twitter" target="_blank">
      <button
        class="social-icon group dark:border-gray-200"
        aria-label="Open Twitter"
      >
        <span
          class="iconify text-xl dark:text-gray-200 dark:group-hover:text-black"
          data-icon="simple-icons:x"></span>
      </button>
    </a>
  </div>
</Container>
